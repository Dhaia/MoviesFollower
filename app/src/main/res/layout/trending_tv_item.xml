<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="250dp"
    android:paddingTop="10dp"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:id="@+id/adapterLayout"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/trending_tv_poster_imageView"
        android:layout_width="143dp"
        android:layout_height="199dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/movie_poster_test" />

    <TextView
        android:id="@+id/trending_tv_title_textView"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="1dp"
        android:fontFamily="sans-serif"
        android:maxLines="1"
        tools:text="Breaking Bad"
        android:textColor="#D1D1D1"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="@id/trending_tv_poster_imageView"
        app:layout_constraintTop_toBottomOf="@id/trending_tv_poster_imageView" />

    <ImageView
        android:id="@+id/trending_tv_rating_imageView"
        android:layout_marginTop="1dp"
        android:layout_width="85dp"
        android:layout_height="15dp"
        android:src="@drawable/five_star"
        app:layout_constraintStart_toStartOf="@id/trending_tv_title_textView"
        app:layout_constraintTop_toBottomOf="@id/trending_tv_title_textView" />

    <TextView
        android:id="@+id/trending_tv_rating_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7.9"
        android:textColor="#FFF200"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/trending_tv_title_textView"
        app:layout_constraintTop_toBottomOf="@id/trending_tv_title_textView"
        tools:ignore="SmallSp" />
</androidx.constraintlayout.widget.ConstraintLayout>