<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_marginBottom="8dp">

    <ImageView
        android:id="@+id/gridItemPoster"
        android:layout_width="110dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/movie_poster_test"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/gridItemTitle"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Breaking Bad"
        android:layout_marginTop="2dp"
        android:maxLines="2"
        android:textColor="#A6A6A6"
        android:textSize="16sp"
        android:fontFamily="@font/gilroy_medium"
        app:layout_constraintEnd_toEndOf="@id/gridItemPoster"
        app:layout_constraintStart_toStartOf="@id/gridItemPoster"
        app:layout_constraintTop_toBottomOf="@id/gridItemPoster" />

</androidx.constraintlayout.widget.ConstraintLayout>